<%= form_with model: article do |f| %>
  <div class="mb-3">
    <%= f.label :title, 'Title', class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3", id="resizable">
    <%= f.label :description, 'Description', class: "form-label resizable"%>
    <%= f.text_area :description, class: "form-control", :rows => 8 %>
  </div>

  <div>
  <%= f.submit class: "btn btn-primary btn-size" %>
  </div>
  
<% end %>